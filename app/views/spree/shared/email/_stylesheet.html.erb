body
{
  background: #fff;
  color: #222222;
  font-family: sans-serif;
}
a
{
  color: #222222;
  font-weight: bold;
}
h1, h2, h3, h4
{
  color: #983897;
  font-weight: bold;
}
h1
{
  font-size: 22px;
  margin: 10px 0;
}
p
{
  margin: 10px 0;
}
#wrapper
{
  background: white;
  margin: 0px auto 30px;
  padding: 20px 40px 40px;
  width: 600px;
}
footer
{
  font-size: 11px;
}
table
{
  border: 1px solid #cccccc;
  border-bottom-color: #aaaaaa;
  border-collapse: collapse;
  border-right-color: #aaaaaa;
  display: table;
  margin-bottom: 5px;
  width: 100%;
}
table .number
{
  min-width: 45px;
  text-align: right;
}
table th
{
  background: #00adeb;
  color: white;
  font-weight: bold;
  padding: 7px 10px;
  text-shadow: #222222 1px 1px 0px;
}
table tr.alt td
{
  background: #eeeeee;
}
table td
{
  border-bottom: 1px solid #dddddd;
  padding: 6px 10px;
}
table td.name
{
  min-width: 180px;
}
table td.title, table td.subtotal
{
  font-weight: bold;
}
table.split td
{
  width: 50%;
}
#order_total
{
  font-weight: bold;
}
#subtotal-row td, #order-total td
{
  border-top: solid 1px #aaaaaa;
}
#addresses
{
  width: 600px;
}
#addresses .address
{
  width: 292px;
}
#addresses .address#billing
{
  float: left;
}
#addresses .address#shipping
{
  float: right;
}
.address
{
  border: 1px solid #cccccc;
  border-bottom-color: #aaaaaa;
  border-right-color: #aaaaaa;
  margin: 10px 0;
}
.address h2
{
  background: #983897;
  color: white;
  display: block;
  font-size: 16px;
  margin: 0;
  padding: 8px;
  text-shadow: #222222 1px 1px 0px;
}
.address .details
{
  padding: 10px;
}
.address .full-name
{
  font-weight: bold;
}
